{% extends 'base.html.twig' %}

{% block title %}Votre profil{% endblock %}

{% block body %}
    <main class="container-fluid profile">
        <div class="container profile-container">
            <div class="row">
                <div class="col-12 profile-section">
                    <h1 class="text-center">Votre profil</h1>
                    <hr>
                    <div class="row profile-content justify-content-center">
                       <div class="col-10 justify-content-center">
                           <div class="row justify-content-between mb-5">
                               <div class="col-12 col-lg-4 col-xl-4 col-sm-10 col-md-4 img-profile">
                                   <img src="assets/img/user/{{ app.user.imageName }}" alt="{{ app.user.firstName }} {{ app
                                   .user.lastName }}" class="myprofile-img mt-4 mb-3">
                               </div>
                               <div class="col-12 col-lg-6 col-xl-6 col-sm-10 col-md-6">
                                   <h3 class="mb-5 text-center"> Vos informations</h3>
                                   <div class="row justify-content-center">
                                       <div class="col-10">
                                           <h4 class="mb-3"><b>Pr√©nom: &nbsp;&nbsp;</b> <i>{{ app.user.firstName }}</i></h4>
                                           <h4 class="mb-3"><b>Nom: &nbsp;&nbsp;</b> <i>{{ app.user.lastName }}</i></h4>
                                           <h4 class="mb-3"><b>Email: &nbsp;&nbsp;</b> <i>{{ app.user.email }}</i></h4>
                                           <h4 class="mb-3"><b>Date d'inscription: &nbsp;&nbsp;</b> <i>{{ app.user.createdAt|date('d/m/Y') }}</i></h4>
                                           <h4 class="mb-3"><b>Role: &nbsp;&nbsp;</b>
                                               {% if is_granted('ROLE_SUPER_ADMIN') %}
                                                   <i>Super Administrateur</i>
                                                   {% elseif is_granted('ROLE_ADMIN') %}
                                                   <i>Administrateur</i>
                                                   {% elseif is_granted('ROLE_USER') %}
                                                   <i>Utilisateur standard</i>
                                               {% endif %}
                                           </h4>
                                       </div>
                                   </div>
                               </div>
                           </div>
                       </div>
                        <div class="col-10 justify-content-center">
                            <div class="row justify-content-center my_comments">
                                <h3 class="mt-5 mb-5 text-center">Vos commentaires</h3>
                                <div class="row justify-content-center text-center mb-5">
                                    <p>Pas de commentaires pour le moment!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
