
{% extends 'base.html.twig' %}
    {% block title %}Actualités{% endblock %}
    {% block body %}
        <div class="container news-main-container">
            <div class="row justify-content-center text-center news-main-title">
                <h1 class="display-1 main-title">Actualités</h1>
                <h3 class="main-sub-title"><em>Les dernières nouvelles du Petit Théâtre</em></h3>
                <img src="{{ asset('assets/img/sections/divider.png') }}" class="col-12 col-md-8 col-lg-6 col-sm-8
                news-divider">
            </div>

            <div class="row first-header-news justify-content-center">
                <h2 class="text-center">À la une</h2>
                <div class="col-10 big-news-header card">
                    {% for post in big_header_news %}
                    <img src="{{ asset('assets/img/news/' ~ post.imageName) }}" alt="">
                    <div class="card-img-overlay main-news-overlay h-100 d-flex flex-column justify-content-end
                    text-left p-5">
                        <h2 class="card-title">{{ post.title }}</h2>
                        <p class="card-text">{{ post.content[:150] ~ '...' }}</p>
                        <p class="card-text">Publication: {{ post.createdAt|date('Y/m/d h:m') }}</p>
                        <a href="{{ path('app_post', {slug: post.slug}) }}"><button class="btn btn-outline-light">Lire la suite</button></a>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="row second-header-news justify-content-center mb-4">
                <div class="row col-10 justify-content-between p-0">
                    {% for post in twins_header_news %}
                        <div class="card bg-dark text-white twins-news-header">
                            <img class="card-img" src="{{ asset('assets/img/news/' ~ post.imageName) }}" alt="Card image">
                            <div class="card-img-overlay main-news-overlay h-100 d-flex flex-column justify-content-end
                        text-left p-4">
                                <h2 class="card-title">{{ post.title }}</h2>
                                <p class="card-text">{{ post.content[:150] ~ '...' }}</p>
                                <p class="card-text">Publication: {{ post.createdAt|date('Y/m/d h:m') }}</p>
                                <a href="{{ path('app_post', {slug: post.slug}) }}"><button class="btn btn-outline-light">Lire la suite</button></a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="container-fluid mt-5 all-news-container">
                <div class="row justify-content-center">
                    <h2 class="news-head-subtitle text-center">
                        Toutes les actualités
                    </h2>
                    <div class="row all-news">
                        <div class="row col-12 all-news-row justify-content-center text-left">
                            {% for post in news %}
                                <div class="news-post-cell col-12 col-xl-4 col-md-6 col-sm-10">
                                        <div class="news-post-card">
                                            <img src="{{ asset('assets/img/news/' ~ post.imageName) }}" alt="">
                                            <div class="card-img-overlay all-news-overlay h-100 d-flex flex-column
                                        justify-content-end text-left p-4">
                                                <h3 class="card-title"><b>{{ post.title }}</b></h3>
                                                <p class="card-text">{{ post.content[:50] ~ '...' }}</p>
                                                    <p class="card-text">{{ post.createdAt|date('Y/m/d h:m') }}</p><br>
                                                <a href="{{ path('app_post', {slug: post.slug}) }}"><button class="btn
                                                btn-outline-light">Lire l'article</button></a>
                                            </div>
                                        </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}