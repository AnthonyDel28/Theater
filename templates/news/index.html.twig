
    {% extends 'base.html.twig' %}
    {% block title %}Actualités{% endblock %}
    {% block body %}
        <div class="container-fluid news">
            <div class="row justify-content-center text-center news-content">
                <h1 class="display-1 main-title">Actualités</h1>
                <img src="{{ asset('assets/img/sections/divider.png') }}" class="col-6 divider">
            </div>
            <div class="container news-container text-center">
                <h3 class="news-head-subtitle">
                    À la une
                </h3>
                <div class="row first-header-news justify-content-center">
                    <div class="col-10 big-news-header">

                    </div>
                </div>
                <div class="row second-header-news justify-content-center mb-4">
                        <div class="row col-10 justify-content-between p-0">
                            <div class="twins-news-header col-5"></div>
                            <div class="twins-news-header col-5"></div>
                        </div>
                </div>
                <div class="container-fluid text-center mt-5">
                    <div class="row justify-content-center text-center">
                        <h3 class="news-head-subtitle">
                            Toutes les actualités
                        </h3>
                        <div class="row all-news">
                            <div class="row col-12 all-news-row justify-content-between">
                                {% for post in news %}
                                    <div class="news-post-cell col-4">
                                        <div class="news-post-card">

                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
