{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/news.css') }}">
{% endblock %}
{% block body %}
    <div class="container-fluid post">
        <div class="row justify-content-center text-center spectacles-content">
            <h1 class="display-1 main-title">{{ post.title }}</h1>
            <img src="{{ asset('assets/img/news/' ~ post.imageName) }}" class="col-10 col-lg-8
            post-head-image">
        </div>
        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="news-post-content col-10">
                    <div class="row">
                        <p><b>Publié par: </b>{{ post.author.firstName }} {{ post.author.lastName }}</p>
                        <p><b>Date de publication: </b>{{ post.createdAt|date('d/m/y h:m') }}</p>
                    </div>
                    <h2 class="">Résumé</h2>
                    <div class="test-new">
                        <p>{{ post.content|raw }}</p>
                    </div>

                    <div class="fb-share-button" data-href="{{ app.request.uri }}" data-layout="button_count" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Partager</a></div>

                    <h2 class="mt-3">Commentaires</h2>
                    <p>Aucun commentaire pour le moment!</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
