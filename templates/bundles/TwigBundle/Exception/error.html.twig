{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/contactus.css') }}">
{% endblock %}
{% block body %}
    <div class="container contact">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-12 col-lg-8 col-xl-8">
                <div id="main">
                    <div class="fof">
                        <h1>Error !</h1>
                    </div>
                </div>
                <h3 class="text-center m-t-5">Une erreur est survenue! Vous essayez peut-être d'accéder à une page
                    inexistante, ou alors vous ne possédez pas les accès suffisantes pour pointer vers cette donnée.
                </h3>
            </div>
        </div>
    </div>
    <style>
        #main{
            display: table;
            width: 100%;
            text-align: center;
        }

        .fof{
            display: table-cell;
            vertical-align: middle;
        }

        .fof h1{
            font-size: 65px;
            display: inline-block;
            padding-right: 12px;
            animation: type .5s alternate infinite;
            margin-bottom: 150px;
        }

        @keyframes type{
            from{box-shadow: inset -3px 0px 0px #888;}
            to{box-shadow: inset -3px 0px 0px transparent;}
        }
    </style>
{% endblock %}