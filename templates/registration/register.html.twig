    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

    <title>Inscription</title>

    {% block javascripts %}
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    {% endblock %}
</head>
<body>
{% include 'partials/header.html.twig' %}
{% block body %}
    <main class="container-fluid login">
        <div class="row justify-content-center">
            <div class="col-10 col-lg-6 login-form">
                <h1 class="my-1 text-center">Inscription</h1>
                <div class="row divider">
                    <img src="{{ asset('assets/img/sections/divider.png') }}" alt="">
                </div>
                <section class="row justify-content-center register-form">
                    <div class="col-12 col-lg-6 col-sm-12 col-xl-6 register-form-content">
